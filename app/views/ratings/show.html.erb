<div>
  <div>
    <h1>
      Rating #<%= @the_rating.id %> details
    </h1>

    <div>
      <div>
        <a href="/ratings">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_rating/<%= @the_rating.id %>">
          Delete rating
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Solution
      </dt>
      <dd>
        <%= @the_rating.solution_id %>
      </dd>

      <dt>
        Vote count
      </dt>
      <dd>
        <%= @the_rating.vote_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_rating.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_rating.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit rating
    </h2>

    <form action="/modify_rating/<%= @the_rating.id %>"  method="post" >
      <div>
        <label for="solution_id_box">
          Solution
        </label>

        <input type="text" id="solution_id_box" name="query_solution_id" value="<%= @the_rating.solution_id %>">
      </div>

      <div>
        <label for="vote_count_box">
          Vote count
        </label>

        <input type="text" id="vote_count_box" name="query_vote_count" value="<%= @the_rating.vote_count %>">
      </div>

      <button>
        Update rating
      </button>
    </form>
  </div>
</div>

<hr>
