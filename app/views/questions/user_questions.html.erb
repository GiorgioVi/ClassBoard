<center>

<%if Question.where(:user_id => @current_user.id).first == nil %>

<div> <h2><%= @current_user.pseudo_name%>, you havent asked any questions yet! </h2><div>

<%else%>
<h2>Questions asked by <%= @current_user.pseudo_name%></h2>

<table border="1">
<tr>
<th>Course Name</th>

<th>Question Description</th>

<th> Posted </th>

<th> See the question </th>

</tr>


<% Question.where(:user_id => @current_user.id).each do|a_question| %>

<tr>
  <th> <%=Course.where(:id => a_question.course_id).first.course_name%> </th>
  <th> <%=a_question.description%></th>
  <th> <%=time_ago_in_words(a_question.created_at)%></th>
  <th> <a href="/questions/<%=a_question.id%>"> See the Question </a></th>
</tr>

<%end%>

</table>

<%end%>

<hr>
<a href="/home_page"> Go Back to home_page </a>
<hr>

</center>